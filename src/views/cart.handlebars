<div class="container mt-4 text-white">
    <div class="row d-flex flex-wrap flex-column flex-md-row justify-content-center align-items-center">
        <div class="col-8 gap-2">
            <table class="table ">
                <thead>
                    <tr>
                        <th scope="col"></th>
                        <th scope="col">Product</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                {{#each cartProducts}}
                <tbody class="m-2">
                    <tr >
                        <th><img src="{{this.product.thumbnail}}" alt="{{this.product.thumbnail}}" style="width:4rem; height:4rem"></th>
                        <td>{{this.product.title}}</td>
                        <td>${{this.product.price}}</td>
                        <td>{{this.quantity}}</td>
                        <td><input type="button" value="X" class="btn btn-danger btnDeleteFromCart" cart-id="{{this.cartId}}" product-id="{{this.product._id}}"></td>
                    </tr>
                </tbody>
                {{/each}}
            </table>
            <input type="button" class="btn btn-danger" id="btnDeletecart" cart-id="{{cartId}}" value="Borrar carrito">
        </div>

        <div class="col-4">
            <h3>Resumen del pedido</h3>
            <div class="row ">
                <div class="col-9">
                    <p>{{prodsQuantity}} productos</p>
                </div>
                <div class="col-3">
                    Total: <h2 class="totalPrice">${{totalPrice}}</h2>
                </div>
                <a href='/api/carts/{{cartId}}/purchase' class="container btn btn-success w-75">Finalizar Compra</a>
            </div>
        </div>
    </div>
</div>
