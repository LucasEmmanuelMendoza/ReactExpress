<div class="bg-success">
    <h1>MODIFICAR PRODUCTO</h1>
     <div class="container d-flex flex-wrap gap-3">
        <div class="card" style="width: 22rem;">
            <img src={{product.thumbnail}} class="card-img-top" alt="...">
            <form id="modProductForm" class="d-flex flex-column justify-content-center gap-2 m-3 ">
                <div class="d-flex flex-column flex-wrap card-body">
                    <label for="">Title: </label><input class="card-title" type="text" name="" id="modTitle" value={{product.title}}><br>
                    <label for="">Description</label><input class="card-text" type="text" name="" id="modDescription"  value={{product.description}}><br>
                    <label for="">Category</label><input class="card-text" type="text" name="" id="modCategory" value={{product.category}}><br>
                    <label for="">Price</label><input class="card-text" type="text" name="" id="modPrice"  value={{product.price}}><br>
                    <label for="">Code</label><input class="card-text" type="text" name="" id="modCode" value={{product.code}}><br>
                    <label for="">Stock</label><input class="card-text" type="text" name="" id="modStock" value={{product.stock}}> <br>
                    <label for="">Thumbnail</label><input class="card-text" type="text" name="" id="modThumbnail"> <br>
                    <input class="btn btn-success" type="submit" value="Modificar producto" userEmail-id="{{user}}" product-id="{{product._id}}">
                </div>
            </form> 
        </div>
    </div>
</div>
